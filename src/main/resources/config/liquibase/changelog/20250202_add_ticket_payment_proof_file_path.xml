<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250202_add_ticket_payment_proof_file_path" author="devtechly">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="ticket"/>
            <not>
                <columnExists tableName="ticket" columnName="payment_proof_file_path"/>
            </not>
        </preConditions>
        <addColumn tableName="ticket">
            <column name="payment_proof_file_path" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
