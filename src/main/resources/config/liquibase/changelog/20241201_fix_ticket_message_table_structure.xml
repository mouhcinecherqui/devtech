<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- Créer la table ticket_message si elle n'existe pas -->
    <changeSet id="20241201_create_ticket_message_table" author="devtech">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ticket_message"/>
            </not>
        </preConditions>
        
        <createTable tableName="ticket_message">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ticket_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_ticket_message_ticket" references="ticket(id)"/>
            </column>
            <column name="content" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="author_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="author_login" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
            <column name="is_internal" type="bit(1)" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Ajouter des index pour améliorer les performances -->
    <changeSet id="20241201_add_ticket_message_indexes" author="devtech">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="ticket_message"/>
        </preConditions>
        
        <createIndex tableName="ticket_message" indexName="idx_ticket_message_ticket_id">
            <column name="ticket_id"/>
        </createIndex>
        
        <createIndex tableName="ticket_message" indexName="idx_ticket_message_created_date">
            <column name="created_date"/>
        </createIndex>
        
        <createIndex tableName="ticket_message" indexName="idx_ticket_message_author_login">
            <column name="author_login"/>
        </createIndex>
        
        <createIndex tableName="ticket_message" indexName="idx_ticket_message_author_type">
            <column name="author_type"/>
        </createIndex>
    </changeSet>

    <!-- Vérifier et corriger les contraintes existantes -->
    <changeSet id="20241201_fix_ticket_message_constraints" author="devtech">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="ticket_message"/>
        </preConditions>
        
        <!-- S'assurer que les colonnes ne sont pas null -->
        <addNotNullConstraint tableName="ticket_message" columnName="content" columnDataType="text"/>
        <addNotNullConstraint tableName="ticket_message" columnName="author_type" columnDataType="varchar(20)"/>
        <addNotNullConstraint tableName="ticket_message" columnName="author_login" columnDataType="varchar(100)"/>
        <addNotNullConstraint tableName="ticket_message" columnName="created_date" columnDataType="datetime(6)"/>
        
        <!-- Ajouter une valeur par défaut pour is_internal si elle n'existe pas -->
        <addDefaultValue tableName="ticket_message" columnName="is_internal" defaultValueBoolean="false"/>
    </changeSet>

</databaseChangeLog> 